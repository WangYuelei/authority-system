<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyl.dao.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wyl.entity.Permission">
        <id column="id" property="id"/>
        <result column="label" property="label"/>
        <result column="parent_id" property="parentId"/>
        <result column="parent_name" property="parentName"/>
        <result column="code" property="code"/>
        <result column="path" property="path"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="type" property="type"/>
        <result column="icon" property="icon"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
        <result column="order_num" property="orderNum"/>
        <result column="is_delete" property="isDelete"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , label, parent_id, parent_name, code, path, name, url, type, icon, create_time, update_time, remark, order_num, is_delete
    </sql>
    <select id="findPermissionByUserId" resultType="com.wyl.entity.Permission" parameterType="java.lang.Long">
        SELECT DISTINCT p.id,
                        p.parent_id,
                        p.label,
                        p.`code`,
                        p.url,
                        p.type,
                        p.icon,
                        p.remark,
                        p.path,
                        p.name
        FROM sys_user u
                 LEFT JOIN sys_user_role ur on u.id = ur.user_id
                 LEFT JOIN sys_role r on ur.role_id = r.id
                 LEFT JOIN sys_role_permission rp on rp.role_Id = r.id
                 LEFT JOIN sys_permission p on p.id = rp.permission_Id
        where u.id = #{userId}
        ORDER BY p.id ASC
    </select>
    <select id="findPermissionList" resultType="com.wyl.entity.Permission">
        select p.id,
               p.parent_id,
               p1.label as parent_name,
               p.label,
               p.`code`,
               p.url,
               p.type,
               p.icon,
               p.remark,
               p.path,
               p.name,
               p.order_num
        from sys_permission p
                 left join sys_permission p1 on p.parent_id = p1.id
        <if test="type !=null ">
            where p.type in
            <foreach collection="array" item="type" index="index" open="(" close=")" separator=",">
                #{type}
            </foreach>
        </if>
        order by #{orderBy} asc
    </select>

</mapper>
